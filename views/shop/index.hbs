{{# each products}}
	<div class="row">
		{{# each this}}
			<div class="col-sm-6 col-md-3">
				<div class="thumbnail mb-2" style="">
					<img src="{{this.imagepath}}" class="card-img-top" alt="..." height="250px">
					<div class="card-body">
						<h5 class="card-title">{{this.title}}</h5>
						<p class="card-text">{{this.description}}</p>
						<span class="font-weight-bold">${{this.price}}</span>
						<a href="#" class="btn btn-primary float-right">Add to cart</a>
					</div>
				</div>
			</div>
		{{/each}}
	</div>
{{/each}}