<div class="row d-flex justify-content-center">
	<div class="col-sm-6 col-md-6 ">
		<div id="success" class="alert alert-success text-center"{{#if noMsg}}style="display: none"{{/if}}>
			{{msgSuccess}}
		</div>
	</div>
</div>
{{# each products}}
	<div class="row">
		{{# each this}}
			<div class="col-sm-6 col-md-3">
				<div class="thumbnail mb-2" style="">
					<img src="{{this.imagepath}}" class="card-img-top" alt="..." height="250px">
					<div class="card-body">
						<h5 class="card-title">{{this.title}}</h5>
						<p class="card-text">{{this.description}}</p>
						<span class="font-weight-bold">${{this.price}}</span>
						<a href="/products/add-to-cart/{{this._id}}" class="btn btn-primary float-right" role="button">Add to cart</a>
					</div>
				</div>
			</div>
		{{/each}}
	</div>
{{/each}}