{{#if products}}
<div class="row justify-content-center">
	<div class="col-sm-12 col-md-6">
		<div class="list-group">
			{{# each products}}
			<li class="list-group-item">
				<span class="badge badge-dark float-right mt-2">{{this.qlt}}</span>
				<strong>{{this.item.title}}</strong>
				<span class="badge badge-primary badge-pill">${{this.item.price}}</span>
				<div class="btn-group">
					<button class="btn btn-primary dropdown-toggle" data-toggle="dropdown">Action <span class="caret"></span></button>
					<ul class="dropdown-menu">
						<li><a href="/products/reduce/{{this.item._id}}">Reduce By 1</a></li>
						<li><a href="/products/remove/{{this.item._id}}">Remove All</a></li>
					</ul>
				</div>
			</li>
			{{/each}}
		</div>
	</div>
</div>
<div class="row">
	<div class="col-sm-6 col-md-6 col-sm-offset-3 col-md-offset-3">
		<strong>Total:${{this.totalPrice}}</strong>
	</div>
</div>
<div class="row">
	<div class="col-sm-6 col-md-6 col-sm-offset-3 col-md-offset-3">
		<a href="/products/checkout" type="buton" class="btn btn-primary">Checkout</a>
	</div>
</div>
{{else}}
<div class="row">
	<div class="col-sm-6 col-md-6 col-sm-offset-3 col-md-offset-3">
		<h2>no Items In Cart</h2>
	</div>
</div>
{{/if}}
